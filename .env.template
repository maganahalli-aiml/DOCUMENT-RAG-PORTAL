# Document RAG Portal - Environment Configuration
# Copy this file to .env and configure for your environment

# ======================
# APPLICATION SETTINGS
# ======================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ======================
# API CONFIGURATION
# ======================
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4

# ======================
# SECURITY SETTINGS
# ======================
SECRET_KEY=your_secret_key_here_minimum_64_characters_long_for_security
CORS_ORIGINS=["http://localhost", "http://localhost:80", "http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ======================
# FILE UPLOAD LIMITS
# ======================
MAX_FILE_SIZE_MB=50
MAX_TEXT_LENGTH=500000
UPLOAD_TIMEOUT_SECONDS=300

# ======================
# CACHE CONFIGURATION
# ======================
CACHE_TYPE=redis
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# ======================
# DATABASE SETTINGS
# ======================
DATABASE_URL=postgresql://portal_user:your_database_password@postgres:5432/document_portal
DB_POOL_SIZE=10
DB_POOL_OVERFLOW=20

# ======================
# LLM CONFIGURATION
# ======================
# Groq API Settings
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-8192

# Google API Settings (Alternative)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Embedding Model
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# ======================
# DOCUMENT PROCESSING
# ======================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
SIMILARITY_THRESHOLD=0.7
MAX_RESULTS=5

# ======================
# MONITORING & LOGGING
# ======================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
LOG_FILE_PATH=/app/logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# ======================
# DEVELOPMENT SETTINGS
# ======================
# Uncomment for development
# ENVIRONMENT=development
# DEBUG=true
# LOG_LEVEL=DEBUG
# API_WORKERS=1
# CORS_ORIGINS=["*"]

# ======================
# PRODUCTION SECURITY
# ======================
# Set these in production:
# - Strong SECRET_KEY (64+ characters)
# - Specific CORS_ORIGINS
# - Enable HTTPS
# - Set proper database credentials
# - Configure Redis authentication
# - Set strong API keys
